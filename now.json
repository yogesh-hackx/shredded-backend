{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/server.js",
            "methods": [
                "GET",
                "POST"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        }
    ]
}